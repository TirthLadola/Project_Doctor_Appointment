@{
    ViewData["Title"] = "Appointment Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model Project_Doctor_Appointment.Areas.Appointment.Models.AppointmentModel

<div class="row">
    <div class="col-md-12">
        <h2>@TempData["AppointmentInsertMsg"]</h2>
        <form method="post" asp-controller="Appointment" asp-action="Save">
            @Html.HiddenFor(x=>x.AppointmentID)
            

            <div class="form-group">
                <label>PatientID</label>
                <input type="text" placeholder="Enter PatientID" asp-for="PatientID" class="form-control" />
            </div>

            <div class="form-group">
                <label>DoctorID</label>
                <input type="text" placeholder="Enter DoctorID" asp-for="DoctorID" class="form-control" />
            </div>

            <div class="form-group">
                <label>AppointmentTypeID</label>
                <input type="text" placeholder="Enter AppointmentTypeID" asp-for="AppointmentTypeID" class="form-control" />
            </div>

            <div class="form-group">
                <label>AppointmentDate</label>
                <input type="date" placeholder="Enter AppointmentDate" asp-for="AppointmentDate" class="form-control" />
            </div>

            <div class="form-group">
                <label>AppointmentTime</label>
                <input type="date" placeholder="Enter AppointmentTime" asp-for="AppointmentTime" class="form-control" />

                <div class="form-group">
                    <label>DiseaseID</label>
                    <input type="text" placeholder="Enter DiseaseID" asp-for="DiseaseID" class="form-control" />
            </div>


            </div>
            <hr />

            <input type="submit" class="btn btn-success" />

        </form>

    </div>

</div>