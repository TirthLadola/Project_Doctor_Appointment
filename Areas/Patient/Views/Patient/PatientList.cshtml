@{
    ViewData["Title"] = "PatientList";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using System.Data
@model DataTable

<div class="content-wrapper">
    <h4 class="fw-bold py-3 mb-1"><span class="text-muted fw-light">Tables /</span> Basic Tables</h4>
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-10">
                    <h3>Disease List</h3>
                </div>

                <div class="col-md-2">
                    <a asp-controller="Patient" asp-action="Add" class="btn btn-success">Add Disease</a>
                </div>
            </div>
            <hr />

        </div>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Mobile No.</th>
                            <th>BirthDate</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Disease Name</th>
                            <th>Gender</th>
                            <th>BloodGroup</th>
                            <th>Weight</th>
                            <th>Created</th>
                            <th>Modified</th>
                        </tr>

                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                <td>@dr["Name"]</td>
                                <td>@dr["MobileNo"]</td>
                                <td>@dr["BirthDate"]</td>
                                <td>@dr["Email"]</td>
                                <td>@dr["Address"]</td>
                                <td>@dr["DiseaseName"]</td>
                                <td>@dr["Gender"]</td>
                                <td>@dr["BloodGroup"]</td>
                                <td>@dr["Weight"]</td>
                                <td>@Convert.ToDateTime(dr["Created"]).ToString("dd-mm-yyyy")</td>
                                <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd-mm-yyyy")</td>
                                <td>
                                    <form method="post" asp-area="Patient" asp-controller="Patient" asp-action="Delete">
                                        <input type="hidden" name="PatientID" value="@Convert.ToInt32(dr["PatientID"])">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
                                        <a class="btn btn-danger" asp-area="Patient" asp-controller="Patient" asp-action="Add" asp-route-Patientid="@Convert.ToInt32(dr["PatientID"])">Update</a>
                                    </form>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--/ Basic Bootstrap Table -->
    </div>
</div>


